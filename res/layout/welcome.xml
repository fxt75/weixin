<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/background_13"
              android:layout_height="match_parent">
    <TextView android:layout_width="50dp"
              android:layout_height="50dp"
              android:textSize="20dp"
              android:textColor="#008B8B"
              android:id="@+id/tv_skip"
              android:gravity="center"
              android:layout_gravity="right"
              android:text="10"
              />
    <Button android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="跳过"
    />
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center" android:orientation="vertical">
        <LinearLayout android:layout_width="wrap_content" android:orientation="horizontal"
                      android:layout_height="wrap_content" android:gravity="center">
            <TextView android:layout_width="wrap_content" android:textColor="#008B8B"
                      android:layout_height="wrap_content"
                      android:text="用户ID:  " android:textSize="20dp"/>
            <EditText android:id="@+id/et_uid" android:background="#ffffff"
                      android:layout_width="150dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp">
            <TextView android:layout_width="wrap_content" android:textColor="#008B8B"
                      android:layout_height="wrap_content"
                      android:text="   姓名:   " android:textSize="20dp"/>
            <EditText android:id="@+id/et_uname" android:background="#ffffff"
                      android:layout_width="150dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp">
            <TextView android:layout_width="wrap_content" android:textColor="#008B8B"
                      android:layout_height="wrap_content"
                      android:text="   密码:   " android:textSize="20dp"/>
            <EditText android:id="@+id/et_upwd" android:background="#ffffff"
                      android:layout_width="150dp" android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dp">
            <Button android:id="@+id/btn_reg" android:textColor="#008B8B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="注册"/>
            <Button android:id="@+id/btn_query_id" android:textColor="#008B8B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="查询"/>
            <Button android:id="@+id/btn_query_like" android:textColor="#008B8B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="模糊查询"/>
            <Button android:id="@+id/btn_query_all" android:textColor="#008B8B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="查询所有"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <Button android:id="@+id/btn_login" android:textColor="#008B8B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="登录"/>
            <Button android:id="@+id/btn_query_update" android:textColor="#008B8B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="修改"/>
            <Button android:id="@+id/btn_query_delete" android:textColor="#008B8B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:text="删除"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>